# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=pcsk_your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=financial-docs
PINECONE_METRIC=cosine

# File Processing Settings
MAX_FILE_SIZE_MB=50
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Agent Settings
RAG_TOP_K_RESULTS=5
SUMMARY_MAX_LENGTH=500
MCQ_NUM_QUESTIONS=5
ANALYTICS_CONFIDENCE_THRESHOLD=0.8

# Vector Store Settings
VECTOR_STORE_TYPE=pinecone
DATABASE_TYPE=memory

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# OpenAI
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# LangSmith
LANGCHAIN_TRACING_V2=true
LANGSMITH_API_KEY=lsv2_pt_your_langsmith_api_key_here
LANGSMITH_PROJECT=financial-chatbot
LANGSMITH_ENDPOINT=https://api.smith.langchain.com